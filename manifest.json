{
  "manifest_version": 3,
  "name": "Dobby X Assistant",
  "version": "1.0",
  "description": "Generate TLDR summaries and ELI5 explanations of any tweets powered by DOOBBY AI",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://api.fireworks.ai/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Dobby X Assistant",
    "default_icon": {
      "16": "D.png",
      "32": "D.png",
      "48": "D.png",
      "128": "D.png"
    }
  },
  "icons": {
    "16": "D.png",
    "32": "D.png",
    "48": "D.png",
    "128": "D.png"
  }
}